datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  phone        String   @unique
  otpCode      String
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  image    String
  products product[]
  tags     Tag[]
}

model product {
  id         Int      @id @default(autoincrement())
  name       String
  image      String
  price      Int
  discount   Int
  isSpecial  Boolean  @default(false)
  isWithHami Boolean @default(false)
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}

model Tag {
  id         Int      @id @default(autoincrement())
  name       String
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}
