datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  phone String  @unique
  otpCode String
  otpCreatedAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Category {
  id Int @id @default(autoincrement())
  name String
  image String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}