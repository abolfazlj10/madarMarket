datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  phone String  @unique
  otpCode String
  otpCreatedAt DateTime
}
model Category {
  id Int @id @default(autoincrement())
  name String
  image String
  products product[]
}
model product {
  id Int @id @default(autoincrement())
  name String
  image String
  price Int
  discount Int
  categoryId Int
  isSpecial Boolean @default(false)
  category Category @relation(fields: [categoryId],references: [id])
}